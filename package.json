{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "description": "A front-end template that helps you build fast, modern mobile web apps.",
  "main": "app/src/index.js",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "watch": "npm run watch:server & npm run watch:js & npm run watch:css & npm run watch:lint",
    "watch:server": "browser-sync start --port 3000 --server app --files 'app/bundle.js,app/index.html,app/bundle.css' --reloadDelay 500",
    "watch:js": "watchify --delay 0 app/src/index.js -v -t [ babelify --sourceMaps=inline ] -g envify -o app/bundle.js",
    "watch:css": "node-sass --watch app/src/index.scss app/bundle.css",
    "watch:lint": "onchange app/src/ -- npm run lint",
    "build": "npm run clean:dist && npm run build:js && npm run build:css && npm run copy:dist",
    "build:html": "npm run htmlmin",
    "build:js": "browserify app/src/index.js -t babelify -g envify -g uglifyify -cm > dist/bundle.js",
    "build:css": "node-sass --output-style compressed app/src/index.scss dist/bundle.css",
    "clean:dist": "rimraf dist && mkdirp dist",
    "copy:dist": "cp app/!{bundle.js} dist/",
    "lint": "eslint app/src",
    "doc": "esdoc -c esdoc.json",
    "postinstall": "node-sass app/src/index.scss app/bundle.css && npm run build && npm run doc"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/thinkingboxmedia/React-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "react"
  ],
  "author": "Thinkingbox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thinkingboxmedia/React-boilerplate/issues"
  },
  "homepage": "https://github.com/thinkingboxmedia/React-boilerplate#readme",
  "engines": {
    "node": ">=0.12.0"
  },
  "browser": {},
  "devDependencies": {
    "babel-eslint": "^4.0.5",
    "babel-jest": "^5.3.0",
    "browser-sync": "^2.8.2",
    "cp": "^0.2.0",
    "esdoc": "^0.2.1",
    "eslint": "^1.1.0",
    "eslint-plugin-react": "^3.2.2",
    "gulp": "^3.9.0",
    "htmlmin": "0.0.3",
    "imagemin": "^3.2.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.2.0",
    "onchange": "^1.1.0",
    "rimraf": "^2.4.2",
    "watchify": "^3.3.1"
  },
  "dependencies": {
    "babel": "^5.8.21",
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "classnames": "^2.1.3",
    "domready": "^1.0.8",
    "envify": "^3.4.0",
    "normalize.css": "^3.0.3",
    "object-assign": "^3.0.0",
    "react": "^0.13.3",
    "react-router": "^0.13.3",
    "uglifyify": "^3.0.1"
  }
}
